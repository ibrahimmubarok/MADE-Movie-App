<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MadeMovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue_1</item>
        <item name="colorPrimaryVariant">@color/color_black_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MadeMovieAppCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">@dimen/dimens_0dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/dimens_0dp</item>
        <item name="cardCornerRadius">@dimen/dimens_6dp</item>
    </style>

    <style name="MadeMovieAppTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicator">@color/white</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="MadeMovieAppTabLayout.TextAppearance" parent="android:TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="MadeMovieAppToolbar" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="MadeMovieAppRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/color_cream</item>
        <item name="colorControlActivated">@color/color_cream</item>
    </style>

    <style name="MadeMovieAppTabLayout." parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/color_grey_1</item>
        <item name="tabIndicator">@color/white</item>
        <item name="android:background">@color/color_black_blue</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>