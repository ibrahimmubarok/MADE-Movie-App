<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emptyLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_blue"
    android:visibility="gone">

    <TextView
        android:id="@+id/tvTitleEmpty"
        style="@style/MadeMovieAppText.Bold.White.Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimens_8dp"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:text="@string/label_no_data"
        android:textSize="@dimen/text_size_18sp" />

    <TextView
        android:id="@+id/tvDescEmpty"
        style="@style/MadeMovieAppText.White.Center"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleEmpty"
        android:layout_margin="@dimen/dimens_8dp"
        android:text="@string/label_deskripsi"
        android:textSize="@dimen/text_size_14sp" />

</RelativeLayout>