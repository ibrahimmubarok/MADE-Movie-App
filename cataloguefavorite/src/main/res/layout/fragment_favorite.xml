<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitlePage"
        style="@style/MadeMovieAppText.Bold.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_16dp"
        android:textSize="@dimen/text_size_22sp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_8dp"
        android:layout_marginEnd="@dimen/dimens_8dp"
        style="@style/MadeMovieAppTabLayout"
        app:tabTextAppearance="@style/MadeMovieAppTabLayout.TextAppearance"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerFav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dimens_8dp"
        android:paddingEnd="@dimen/dimens_8dp"
        android:overScrollMode="never"/>

</LinearLayout>